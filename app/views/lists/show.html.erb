<div class="show">
  <div class="bookmark-index">
    <h1><%= @list.name %></h1>

    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <h3><%= bookmark.movie.title %></h3>
          <p><%= bookmark.movie.overview %></p>
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
          <p><%= bookmark.movie.rating %></p>
          <p><%=bookmark.comment %></p>
          <%= link_to bookmark, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="bookmark-add">
    <%= link_to "Back to mes listes", lists_path, class: "btn btn-primary m-3 p-3" %>

    <%= simple_form_for ([@list, @bookmark]) do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
