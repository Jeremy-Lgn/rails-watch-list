<div class="show">
  <h1><%= @list.name %></h1>

  <%= link_to "Back to mes listes", lists_path, class: "btn btn-primary" %>

  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <h3><%= bookmark.movie.title %></h3>
        <p><%= bookmark.movie.overview %></p>
        <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
        <p><%= bookmark.movie.rating %></p>
        <p><%=bookmark.comment %></p>
        <%= link_to bookmark, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<%= simple_form_for ([@list, @bookmark]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.button :submit %>
<% end %>
