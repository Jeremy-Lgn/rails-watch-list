<div class="index-container">


  <div class="banner d-flex justify-content-evenly">
    <%= image_tag "banner.jpeg", alt: "Le Wagon", width: 400, style: "transform: scaleX(-1);" %>
    <div class="carousel-top">
      <div class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @movies.each_with_index do |movie, i| %>
          <div class="carousel-item <%= i == 0 ? "active" : "" %>">
            <img src="<%= movie.poster_url %>" class="d-block w-100" alt="<%= movie.title %>">
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <%= image_tag "banner.jpeg", alt: "Le Wagon", width: 400 %>
  </div>



  <div class="d-flex justify-content-center">
    <div class="carouselContainer">
      <%= link_to "+", new_list_path, class:"button-add btn btn-dark round" %>
      <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <% @lists.each_with_index do |list, i| %>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" <%= i == 0 ? "class=active" : "" %> aria-current="true" aria-label="Slide 1"></button>
          <% end %>
        </div>
        <div class="carousel-inner">
          <% @lists.each_with_index do |list, i| %>
            <%= link_to list_path(list) do %>
              <div class="carousel-item <%= i == 0 ? "active" : "" %>">
                <img class="d-block w-100" src="https://hatrabbits.com/wp-content/uploads/2017/01/random.jpg" alt="<%= list.name %>">
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= list.name %></h5>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>
